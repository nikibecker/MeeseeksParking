<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateLotFloors">

    <RadioGroup
        android:id="@+id/rgLotChoice"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:layout_marginBottom="94dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp"
        app:layout_constraintBottom_toTopOf="@+id/tvFloorNumLabel"
        app:layout_constraintEnd_toStartOf="@+id/ddLotName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Name" />

        <RadioButton
            android:id="@+id/rbSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="From Existing" />

    </RadioGroup>

    <TextView
        android:id="@+id/tvNumOfSpotsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="228dp"
        android:layout_marginStart="62dp"
        android:enabled="true"
        android:text="Number of Spots:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/etNumSpots"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvLotNameLabel"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="7dp"
        android:enabled="true"
        android:text="Lot Name:"
        app:layout_constraintBottom_toTopOf="@+id/rgLotChoice"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvFloorNumLabel"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="103dp"
        android:enabled="true"
        android:text="Floor Num:"
        app:layout_constraintBottom_toTopOf="@+id/tvNumOfSpotsLabel"
        app:layout_constraintEnd_toStartOf="@+id/etFloorNum"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etNumSpots"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="117dp"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/tvParkingTypeLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvNumOfSpotsLabel"
        app:layout_constraintTop_toBottomOf="@+id/etFloorNum" />

    <EditText
        android:id="@+id/etFloorNum"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginEnd="116dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvFloorNumLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.484" />

    <EditText
        android:id="@+id/etLotName"
        android:layout_width="202dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/ddLotName"
        app:layout_constraintStart_toStartOf="@+id/ddLotName"
        app:layout_constraintTop_toBottomOf="@+id/tvLotNameLabel" />

    <Spinner
        android:id="@+id/ddLotName"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="41dp"
        android:background="@drawable/spinner_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rgLotChoice"
        app:layout_constraintTop_toTopOf="@+id/rgLotChoice" />

    <TextView
        android:id="@+id/tvParkingTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="5dp"
        android:text="Parking Type:"
        app:layout_constraintEnd_toStartOf="@+id/ddParkingType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ddParkingType" />

    <Spinner
        android:id="@+id/ddParkingType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="47dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/spinner_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvParkingTypeLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvNumOfSpotsLabel" />

</android.support.constraint.ConstraintLayout>